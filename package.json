{
  "name": "code-dependency",
  "version": "0.1.0",
  "private": true,
  "description": "A work efficiency tool for visualizing code dependencies on a browser.",
  "repository": "https://github.com/Himenon/code-dependency.git",
  "license": "MIT",
  "author": "Himenon",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "yarn run build:lib:dist && lerna run build && yarn run cooldown",
    "build:lib": "tsc -b @build.txt",
    "build:lib:dist": "yarn run clean:lib && yarn run warmup && yarn run build:lib --verbose && lerna run copy:style",
    "clean:all": "yarn run clean:lib && yarn run clean:cache && lerna run clean",
    "clean:cache": "rimraf buildcache",
    "clean:lib": "yarn run build:lib --clean && lerna run clean:lib",
    "cooldown": "ts-node -P ./bin/tsconfig.json ./bin/tsconfig.shared.ts",
    "cruiser": "lerna run cruiser",
    "develop": "yarn run build:lib --verbose -w",
    "format": "yarn lint --fix && prettier --write \"**/*.{ts,tsx,js,jsx,json,yml,yaml,html,md,scss}\"",
    "generate:sample": "./bin/generate-sample.sh",
    "initialize": "run-s bootstrap clean:all setup build:lib",
    "lint": "eslint -c ./.eslintrc.js 'packages/**/*.{ts,tsx}'",
    "lint:fix": "yarn lint --fix",
    "publish": "lerna publish from-package",
    "setup": "ts-node -P ./bin/tsconfig.json ./bin/setup.ts",
    "test": "lerna run test",
    "test:ci": "lerna run test:ci",
    "version": "lerna version",
    "warmup": "ts-node -P ./bin/tsconfig.json ./bin/tsconfig.shared.ts dist"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.7.7",
    "@babel/preset-env": "^7.7.7",
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@types/commander": "^2.12.2",
    "@types/enhanced-resolve": "^3.0.6",
    "@types/jest": "^24.0.25",
    "@types/node": "^13.1.1",
    "@types/recursive-readdir": "^2.2.0",
    "@types/resolve": "^1.14.0",
    "@types/typescript": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^2.13.0",
    "@typescript-eslint/parser": "^2.13.0",
    "cpx": "^1.5.0",
    "dependency-cruiser": "^6.1.0",
    "eslint": "^6.8.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "generate-changelog": "^1.8.0",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "jest-cli": "^24.9.0",
    "json-stringify-pretty-compact": "^2.0.0",
    "lerna": "^3.20.1",
    "lint-staged": "^9.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0",
    "sort-package-json": "^1.32.2",
    "ts-jest": "^24.2.0",
    "ts-node": "^8.5.4",
    "type-fest": "^0.8.1"
  },
  "peerDependencies": {
    "graceful-fs": "^4.2.3"
  },
  "resolutions": {
    "**/**/fsevents": "^1.2.9"
  },
  "publishConfig": {
    "access": "public"
  }
}
