{
  "name": "@code-dependency/map",
  "version": "0.0.1-alpha.2",
  "description": "It is a library for acquiring as a 1-dimensional array the modules that each file group existing under a certain directory depends on.",
  "keywords": [],
  "homepage": "https://github.com/Himenon/code-dependency#readme",
  "bugs": {
    "url": "https://github.com/Himenon/code-dependency/issues"
  },
  "repository": "https://github.com/Himenon/code-dependency/packages/code-dependency",
  "license": "MIT",
  "author": {
    "name": "Himenon",
    "email": "k.himeno314@gmail.com",
    "url": "https://github.com/Himenon"
  },
  "files": [
    "lib",
    "package.json"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "directories": {
    "lib": "lib"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "clean": "rimraf ./lib ./build",
    "cruiser": "dependency-cruiser --validate .dependency-cruiser.json src",
    "format": "prettier --config ../../.prettierrc --write src/*.{ts,tsx}",
    "lint": "eslint --cache --cache-location ../../buildcache/map/ -c ../../.eslintrc.json 'src/**/*.{ts,tsx}'",
    "lint:fix": "yarn run lint --fix",
    "server": "node ./lib/server.js",
    "start": "yarn run develop",
    "test": "yarn run cruiser && yarn run test:jest",
    "test:ci": "yarn run test && codecov",
    "test:jest": "jest --cache -c ./jest.config.json",
    "test:watch": "yarn run test:jest --watch",
    "clean:lib": "rimraf lib"
  },
  "dependencies": {
    "@code-dependency/extract": "^0.0.1-alpha.2",
    "@code-dependency/resolver": "^0.0.1-alpha.2",
    "recursive-readdir": "^2.2.2"
  },
  "devDependencies": {
    "@code-dependency/interfaces": "^0.0.1-alpha.2"
  }
}
