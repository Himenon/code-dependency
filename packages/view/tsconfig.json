{
  "extends": "../../tsconfig",
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "outDir": "lib",
    "rootDir": "./src",
    "moduleResolution": "node",
    "lib": ["es2017", "es2016", "es2015", "es5", "dom"],
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "typeRoots": ["../../node_modules/@types", "./node_modules/@types", "./types"],
    "paths": {
      "@app/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "types"],
  "exclude": ["node_modules"]
}
