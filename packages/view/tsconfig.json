{
  "extends": "../../tsconfig",
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "outDir": "lib",
    "rootDir": "./src",
    "moduleResolution": "node",
    "lib": ["es2017", "es2016", "es2015", "es5", "dom"],
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "typeRoots": ["../../node_modules/@types", "./node_modules/@types", "./types"],
    "paths": {
      "@app/component": ["./src/component/index.ts"],
      "@app/container": ["./src/container/index.ts"],
      "@app/domain": ["./src/domain/index.ts"],
      "@app/infra": ["./src/infra/index.ts"],
      "@app/interface": ["./src/interface/index.d.ts"],
      "@app/style": ["./src/style/index.ts"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "types"],
  "exclude": ["node_modules"]
}
