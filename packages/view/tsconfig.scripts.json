{
  "compilerOptions": {
    "rootDirs": ["./scripts/", "./config/", "../../bin"],
    "sourceMap": false,
    "declaration": false,
    "declarationMap": false,
    "lib": ["dom", "es2018"],
    "module": "commonjs",
    "typeRoots": [
      "./node_modules/@types"
    ]
