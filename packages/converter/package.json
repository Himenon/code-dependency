{
  "name": "@code-dependency/converter",
  "version": "0.0.1",
  "description": "It is a library to convert the map of dependency map into data for graphing.",
  "keywords": [],
  "homepage": "https://github.com/Himenon/code-dependency#readme",
  "bugs": {
    "url": "https://github.com/Himenon/code-dependency/issues"
  },
  "repository": "https://github.com/Himenon/code-dependency/packages/converter",
  "license": "MIT",
  "author": {
    "name": "Himenon",
    "email": "k.himeno314@gmail.com",
    "url": "https://github.com/Himenon"
  },
  "files": [
    "lib",
    "package.json"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "clean": "rimraf ./lib ./build",
    "cruiser": "dependency-cruiser --validate .dependency-cruiser.json src",
    "generate:sample": "ts-node ./bin/generate-sample.ts ../test-project/src/index.ts",
    "format": "prettier --config ../../.prettierrc --write src/*.{ts,tsx}",
    "lint": "eslint --cache --cache-location ../../buildcache/converter/ -c ../../.eslintrc.json 'src/**/*.{ts,tsx}'",
    "lint:fix": "yarn run lint --fix",
    "server": "node ./lib/server.js",
    "start": "yarn run develop",
    "test": "yarn run cruiser && yarn run test:jest",
    "test:ci": "yarn run test && codecov",
    "test:jest": "jest --cache -c ./jest.config.json",
    "test:watch": "yarn run test:jest --watch"
  },
  "dependencies": {
    "@code-dependency/interfaces": "0.0.1",
    "lodash": "^4.17.11",
    "normalize-path": "^3.0.0"
  },
  "devDependencies": {
    "@code-dependency/map": "0.0.1",
    "@code-dependency/test-project": "0.0.1",
    "@types/normalize-path": "^3.0.0"
  }
}
