{
  "extends": "../tsconfig.shared",
  "compilerOptions": {
    "outDir": "lib",
    "rootDir": ".",
    "baseUrl": ".",
    "lib": [
      "dom",
      "esnext"
    ],
    "declarationMap": false,
    "paths": {
      "@app/domain": ["./src/domain"],
      "@app/domain*": ["./src/domain*"],
      "@app/types": ["./src/types"]
    }
  },
  "references": [
    { "path": "../interfaces" },
    { "path": "../converter" }
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "scripts/**/*.ts",
    "scripts/**/*.tsx",
    "config/**/*.ts",
    "config/**/*.tsx"
  ]
}