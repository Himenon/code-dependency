  "include": ["scripts/**/*.ts", "scripts/**/*.tsx", "config/**/*.ts", "config/**/*.tsx", "../../bin/*.ts"],
  "exclude": ["node_modules", "./src/**/__tests__/*", "src/**/*"]
}
