{
  "name": "code-dependency",
  "version": "0.1.0",
  "private": true,
  "description": "for humans libary with node",
  "repository": "https://github.com/Himenon/code-dependency.git",
  "license": "MIT",
  "author": "Himenon",
  "workspaces": [
    "packages/*",
    "packages/@code-dependency/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "yarn run build:lib:dist && yarn run warmup:packages && lerna run build && yarn run cooldown:packages && yarn run cooldown",
    "build:lib": "tsc -b @build.txt --verbose",
    "build:lib:dist": "yarn run clean && yarn run warmup && yarn run build:lib",
    "build:lib:watch": "tsc -b -w @build.txt",
    "clean": "tsc -b @build.txt --clean && lerna run clean",
    "clean:cache": "lerna run clean:cache",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "cooldown": "ts-node ./bin/tsconfig.shared.ts",
    "cooldown:packages": "ts-node ./bin/tsconfig.build.ts",
    "cruiser": "lerna run cruiser",
    "format": "lerna run format",
    "lint": "lerna run lint",
    "setup": "ts-node ./bin/setup.ts",
    "test": "lerna run test",
    "test:ci": "lerna run test:ci",
    "warmup": "ts-node ./bin/tsconfig.shared.ts dist",
    "warmup:packages": "ts-node ./bin/tsconfig.build.ts dist"
  },
  "dependencies": {
    "lodash": "^4.17.11"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "@types/commander": "^2.12.2",
    "@types/enhanced-resolve": "^3.0.6",
    "@types/jest": "^24.0.11",
    "@types/lodash": "^4.14.123",
    "@types/node": "^11.13.0",
    "@types/recursive-readdir": "^2.2.0",
    "@types/resolve": "^0.0.8",
    "@types/typescript": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^1.6.0",
    "@typescript-eslint/eslint-plugin-tslint": "^1.6.0",
    "@typescript-eslint/parser": "^1.6.0",
    "codecov": "^3.3.0",
    "dependency-cruiser": "^4.15.1",
    "eslint": "^5.16.0",
    "generate-changelog": "^1.7.1",
    "husky": "^1.3.1",
    "jest": "^24.7.1",
    "jest-cli": "^24.7.1",
    "lerna": "^3.13.2",
    "lint-staged": "^8.1.5",
    "prettier": "^1.16.4",
    "rimraf": "^2.6.3",
    "sort-package-json": "^1.22.1",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.0.3",
    "tslint": "^5.15.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^8.0.1",
    "tslint-plugin-prettier": "^2.0.1"
  },
  "peerDependencies": {
    "graceful-fs": "^4.1.2"
  }
}
