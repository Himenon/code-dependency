{
  "extends": "../tsconfig.shared",
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "lib",
    "rootDir": "src",
    "composite": true,
    "sourceMap": true,
    "declarationMap": true
  },
  "exclude": [
    "node_modules",
    "./src/**/__tests__/*",
    "scripts"
  ]
}
