{
  "extends": "../tsconfig.shared",
  "compilerOptions": {
    "outDir": "lib",
    "rootDir": "src",
    "baseUrl": ".",
    "lib": [
      "dom",
      "esnext"
    ],
    "paths": {
      "@app/domain": [
        "./src/domain"
      ],
      "@app/domain*": [
        "./src/domain*"
      ],
      "@app/types": [
        "./src/types"
      ]
    },
    "tsBuildInfoFile": "buildcache/tsconfig.json.tsbuildinfo"
  },
  "references": [
    {
      "path": "../interfaces"
    },
    {
      "path": "../converter"
    }
  ],
  "include": [
    "src/*.ts",
    "src/*.tsx",
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "./src/**/__tests__/*",
    "scripts"
  ]
}
